{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: electron:dev",
      "type": "npm",
      "script": "electron:dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*dist-electron.*",
          "endsPattern": ".*(VITE.*ready|Local:.*http)"
        }
      }
    }
  ]
}
